<div class="signup">
  <div class="container">
    <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.text_field :name, :placeholder => "Name", required: true %>
        <%= f.email_field :email, :placeholder => "Email" %>
        <%= f.password_field  :password, :placeholder => "Password", required: true %>
      </div>
      <div class="actions">
        <%= f.submit "Create" %>
      </div>
      <% end %>
  </div>
</div>