<div class="signup">
  <div class="container">
    <%= form_for(@user) do |f| %>
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name, required: true %>
        <label>Email</label>
        <%= f.email_field :email %>
        <label>Password</label>
        <%= f.password_field  :password, required: true %>
      </div>
      <div class="actions">
        <%= f.submit "Create" %>
      </div>
      <% end %>
  </div>
</div>