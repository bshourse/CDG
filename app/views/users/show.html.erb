<div class="show">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <%= render 'flash-messages' %>
        <h2><%= @user.name %></h2>
        <h2><%= @user.email %></h2>
        <%= link_to "Edit", user_edit_path(@user), method: "get" %>
        <%= link_to "Log out", user_logout_path, method: "delete" %>
        <%= link_to "Dashboard", dashboard_dir_path, method: "get" %>
        <% if @current_user && @current_user.admin? %>
        <p class="browse-users">
          <%= link_to "Browse Users", users_path %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>