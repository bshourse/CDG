<div class="newDish">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <%= form_for @dish do |d|  %>
          <% if @dish.errors.any? %>
            <% @dish.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
            <% end %>
          <% end %>

      <div class="form-group">
        <%= d.text_field :name, :placeholder => "Dish name", class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= d.text_area :description, :placeholder => "Description", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= d.text_field :price, :placeholder => "Dish price", class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= d.text_field :course_name, :placeholder => "Course name", class: "form-control", required: true %>
        <small class="form-text text-muted">
          Course name should be: first course / main course / drink
        </small>
      </div>

      <div class="form-group">
        <%= d.file_field :image, :placeholder => "Choose Image",class: "form-control-file" %>
      </div>

        <%= d.fields_for :courses do |c| %>
        <%= c.hidden_field :day_id, value: $day.id %>

      <div class="actions">
        <%= d.submit "Save", class: "btn btn-primary" %>
      </div>

        <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>